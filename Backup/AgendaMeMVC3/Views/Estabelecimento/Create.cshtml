@model AgendaMeMVC3.Models.Estabelecimento

@{
    ViewBag.Title = "Create";
}

<h2 class="admtitle2"><a href="#">Cadastrar Estabelecimento</a></h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Estabelecimento</legend>
       
        <div class="editor-label">
            CPF/CNPJ
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DsCpfCnpj)
            @Html.ValidationMessageFor(model => model.DsCpfCnpj)
        </div>        

        <div class="editor-label">
            Nome Estabelecimento
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DsNome)
            @Html.ValidationMessageFor(model => model.DsNome)
        </div>
         
        <div class="editor-label">
            Empresa
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.CdEmpresa, ViewData ["LstEmpresa"] as SelectList)
            @Html.ValidationMessageFor(model => model.CdEmpresa)
        </div>

        <div class="editor-label">
            Telefone
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DsFone1)
            @Html.ValidationMessageFor(model => model.DsFone1)
        </div>
                
        <div class="editor-label">
            Celular
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DsFone2)
            @Html.ValidationMessageFor(model => model.DsFone2)
        </div>
        
        <div class="editor-label">
            CEP
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NrCep)
            @Html.ValidationMessageFor(model => model.NrCep)
        </div>
        
        <div class="editor-label">
            Bairro
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.CdBairro, ViewData ["LstBairro"] as SelectList)
            @Html.ValidationMessageFor(model => model.CdBairro)
        </div>
                
        <div class="editor-label">
            Rua
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DsRua)
            @Html.ValidationMessageFor(model => model.DsRua)
        </div>
                
        <div class="editor-label">
            Horário Atendimento Manhã De:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.HrAtendInicioManha)
            @Html.ValidationMessageFor(model => model.HrAtendInicioManha)
        </div>

        <div class="editor-label">
            Até:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.HrAtendFimManha)
            @Html.ValidationMessageFor(model => model.HrAtendFimManha)
        </div>

        <div class="editor-label">
            Horário Atendimento Tarde De:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.HrAtendInicioTarde)
            @Html.ValidationMessageFor(model => model.HrAtendInicioTarde)
        </div>

        <div class="editor-label">
            Até:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.HrAtendFimTarde)
            @Html.ValidationMessageFor(model => model.HrAtendFimTarde)
        </div>
                
        <p>
            <button class="button" type="submit">Salvar</button>
            @*<input type="submit" value="Salvar" />*@
        </p>
    </fieldset>
}

<div class="voltar">
    @Html.ActionLink("Voltar a Lista", "Index")
</div>
