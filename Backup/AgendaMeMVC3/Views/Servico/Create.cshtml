@model AgendaMeMVC3.Models.Servico

@{
    ViewBag.Title = "Create";
}

<h2 class="admtitle2"><a href="#">Cadastrar Serviço</a></h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Serviço</legend>

        <div class="editor-label">
            Serviço
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DsNome)
            @Html.ValidationMessageFor(model => model.DsNome)
        </div>

        <div class="editor-label">
            Tipo Serviço
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.CdTipoServico, ViewData["LstTipoServico"] as SelectList)
            @Html.ValidationMessageFor(model => model.CdTipoServico)
        </div>

        <div class="editor-label">
           Duração em Horas
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NrDuracaoHoras)
            @Html.ValidationMessageFor(model => model.NrDuracaoHoras)
        </div>

        <div class="editor-label">
            Duração em Minutos
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NrDuracaoMinutos)
            @Html.ValidationMessageFor(model => model.NrDuracaoMinutos)
        </div>

        <div class="editor-label">
            Sexo
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ChSexo)
            @Html.ValidationMessageFor(model => model.ChSexo)
        </div>

        <div class="editor-label">
            Profissional
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.CdProfissional, ViewData["LstProfissional"] as SelectList)
            @Html.ValidationMessageFor(model => model.CdProfissional)
        </div>

        <div class="editor-label">
            Valor do serviço
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NrValor)
            @Html.ValidationMessageFor(model => model.NrValor)
        </div>

        <p>
            <button class="button" type="submit">Salvar</button>
            @*<input type="submit" value="Salvar" />*@
        </p>
    </fieldset>
}

<div class="voltar">
    @Html.ActionLink("Voltar a Lista", "Index")
</div>
