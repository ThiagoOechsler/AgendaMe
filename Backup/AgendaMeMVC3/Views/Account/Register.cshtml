@model AgendaMeMVC3.Models.RegistrarClienteModel

@{
    ViewBag.Title = "Register";
}



<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<h2 class="title2"><a href="#">Nova conta</a></h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "Não foi possível criar a conta. Por favor corrija os problemas e tente novamente.")
    <div class="entry">
        <p>
            Informe os campos para criar a uma conta ou @Html.ActionLink("Entre", "LogOn", "Account")  caso já tenha se cadastrado.
        </p>
        <p>
            A senha requer no mínimo @Membership.MinRequiredPasswordLength caracteres de tamanho.
        </p>
        <fieldset>
            <legend>Informações</legend>
            <div class="editor-label">
             CPF/CNPJ
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.DsCpfCnpj)
                @Html.ValidationMessageFor(model => model.DsCpfCnpj)
            </div>

            <div class="editor-label">
                Nome Cliente
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.DsNome)
                @Html.ValidationMessageFor(model => model.DsNome)
            </div>

              <div class="editor-label">
               Sobrenome
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.DsSobrenome)
                @Html.ValidationMessageFor(model => model.DsSobrenome) 
            </div>

            <div class="editor-label">
                Data de Nascimento
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.DtNascimento) 
                @Html.ValidationMessageFor(model => model.DtNascimento) 
            </div>

             <div class="editor-label">
                Telefone
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.DsFone1)
                @Html.ValidationMessageFor(model => model.DsFone1)
            </div>
            
            <div class="editor-label">
                Celular
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.DsFone2)
                @Html.ValidationMessageFor(model => model.DsFone2)
            </div>

            <div class="editor-label">
                 E-mail
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.DsEmail)
                @Html.ValidationMessageFor(model => model.DsEmail)
            </div>            

            <div class="editor-label">
                @Html.LabelFor(m => m.UserName)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Password)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </div>
@*
            <div class="editor-label">
                @Html.LabelFor(m => m.ConfirmPassword)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.ConfirmPassword)
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
                @if (Model != null) {
                   var s = Model.ErrouSenha;
                   if (s == true)
                   { <p>A senha e a senha de confirmação não conferem</p>
                   }
                 }
            </div>*@

            <div class= "editor-label">
            <p></p>
            Receber E-mail de Lembrete do Horário Agendado?<br>
            @Html.CheckBoxFor(model => model.BooLembrar)
            </div>

            <p>
                <button class="button" type="submit">Cadastrar</button>
                @*<input type="submit" value="Register" />*@
            </p>
        </fieldset>
    </div>
}
