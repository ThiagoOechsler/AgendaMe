@model AgendaMeMVC3.Models.TipoServico

@{
    ViewBag.Title = "Create";
}

<h2 class="admtitle2"><a href="#">Cadastrar Tipo de Serviço</a></h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Tipos de Serviços</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.CdEstabelecimento, "Estabelecimento")
        </div>
        <div class="editor-field">
            @Html.DropDownList("CdEstabelecimento", String.Empty)
            @Html.ValidationMessageFor(model => model.CdEstabelecimento)
        </div>

        <div class="editor-label">
            Tipo de Serviço
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DsNome)
            @Html.ValidationMessageFor(model => model.DsNome)
        </div>

        <p>
            <button class="button" type="submit">Salvar</button>
            @*<input type="submit" value="Salvar" />*@
        </p>
    </fieldset>
}

<div class="voltar">
    @Html.ActionLink("Voltar a Lista", "Index")
</div>
