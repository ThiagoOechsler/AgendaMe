@model AgendaMeMVC3.Models.Profissional

@{
    ViewBag.Title = "Edit";
}

<h2 class="admtitle2"><a href="#">Editar Profissional</a></h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Profissional</legend>

        @Html.HiddenFor(model => model.CdProfissional)
        @Html.HiddenFor(model => model.CdPessoa)

        <div class="editor-label">
            CPF/CNPJ
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Pessoa.DsCpfCnpj)
            @Html.ValidationMessageFor(model => model.Pessoa.DsCpfCnpj)
        </div>

        <div class="editor-label">
            Nome
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Pessoa.DsNome)
            @Html.ValidationMessageFor(model => model.Pessoa.DsNome)
        </div>

        <div class="editor-label">
            Sobrenome
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Pessoa.DsSobrenome)
            @Html.ValidationMessageFor(model => model.Pessoa.DsSobrenome) 
        </div>

        <div class="editor-label">
            Telefone
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Pessoa.DsFone1)
            @Html.ValidationMessageFor(model => model.Pessoa.DsFone1)
        </div>
            
        <div class="editor-label">
            Celular
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Pessoa.DsFone2)
            @Html.ValidationMessageFor(model => model.Pessoa.DsFone2)
        </div>

        <div class="editor-label">
            E-mail
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Pessoa.DsEmail)
            @Html.ValidationMessageFor(model => model.Pessoa.DsEmail)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DsOcupacao)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DsOcupacao)
            @Html.ValidationMessageFor(model => model.DsOcupacao)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.HrAtendInicioManha)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.HrAtendInicioManha)
            @Html.ValidationMessageFor(model => model.HrAtendInicioManha)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.HrAtendInicioTarde)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.HrAtendInicioTarde)
            @Html.ValidationMessageFor(model => model.HrAtendInicioTarde)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.HrAtendFimManha)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.HrAtendFimManha)
            @Html.ValidationMessageFor(model => model.HrAtendFimManha)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.HrAtendFimTarde)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.HrAtendFimTarde)
            @Html.ValidationMessageFor(model => model.HrAtendFimTarde)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CdEstabelecimento, "Estabelecimento")
        </div>
        <div class="editor-field">
            @Html.DropDownList("CdEstabelecimento", String.Empty)
            @Html.ValidationMessageFor(model => model.CdEstabelecimento)
        </div>

        <div class="editor-label">
            Login
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Pessoa.DsLogin)
            @Html.ValidationMessageFor(model => model.Pessoa.DsLogin) 
        </div>

        <div class="editor-label">
            Senha
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Pessoa.DsSenha)
            @Html.ValidationMessageFor(model => model.Pessoa.DsSenha) 
        </div>

        <p>
            <button class="button" type="submit">Salvar</button>
            @*<input type="submit" value="Save" />*@
        </p>
    </fieldset>
}

<div class="voltar">
    @Html.ActionLink("Back to List", "Index")
</div>
