@model AgendaMeMVC3.Models.LogOnModel

<h2 class="title2"><a href="#">Logar-se</a></h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Html.ValidationSummary(true, "Login não teve sucesso. Por favor, corrija os capos informados e tente novamente.")

@using (Html.BeginForm()) {
    <div class="entry">
        <p>
            Por favor informe seu login e senha ou @(Html.ActionLink("cadastre-se", "Register", "Account")) se você não possui login.
        </p>
        <fieldset>
            <legend>Informações da conta</legend>

            <div class="editor-label">
                @Html.LabelFor(m => m.UserName)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Password)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </div>

            <div class="editor-label">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe)
            </div>

            <p>
                <button class="button" type="submit">Entrar</button>
                @*<input type="submit" value="Log On" />*@
            </p>
        </fieldset>
    </div>
}
